{
  "name": "cmm-multiplatform",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Capability Matrix Management - Cross-platform React Native monorepo",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
