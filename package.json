    "eslint-plugin-react-native": "^5.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.0",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.20.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
